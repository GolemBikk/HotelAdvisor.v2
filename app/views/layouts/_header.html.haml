%header.navbar
  .container-fluid
    %nav.collapse.navbar-collapse
      #logo.navbar-header
        %a.navbar-brand{ href: root_path}
          = image_tag 'logo.jpg'
      %ul.nav.navbar-nav.navbar-right
        %li.right-line-border
          = link_to 'Главная', home_path
        %li.right-line-border
          = link_to 'Отели', hotels_path
        %li
          = link_to 'Новости', '#'
        - if user_signed_in?
          %li.dropdown
            %a#btn-logout.dropdown-toggle.btn{ 'aria-expanded' => false, 'aria-haspopup' => true,
                                               'data-toggle' => 'dropdown', href: '#', role: 'button' }
              Аккаунт
              %i.glyphicon.glyphicon-triangle-bottom
            %ul#account-menu.dropdown-menu
              %li
                = link_to 'Профиль', user_path(current_user)
              %li
                = link_to 'Настройки', edit_user_registration_path
              %li.divider{ role: 'separator' }
              %li
                = link_to 'Выйти', destroy_user_session_path, method: :delete
        - else
          %li
            = link_to 'Войти', new_user_session_path,
                               class: 'btn', id: 'btn-login'
          %li
            = link_to 'Зарегистрироваться', new_user_registration_path,
                                            class: 'btn', id: 'btn-register'
