= provide :title, 'Log in'
.login-background
.modal.my-modal
  .modal-body.my-modal-body
    %h2
      Войдите
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      %div.form-inputs
        .input-text
          = f.label :email, 'Электронная почта'
          = f.input :email, required: true, label: false, autofocus: true
        .input-text
          = f.label :password, 'Пароль'
          = f.input :password, required: true, label: false
        .input-checkbox
          = f.input :remember_me, as: :boolean, label: 'Запомнить меня' if devise_mapping.rememberable?

      %div.form-actions
        = f.button :submit, 'Войти', class: 'login-btn'

    = link_to 'Назад', url_for(:back), class: 'btn'

    = render 'users/shared/links'
